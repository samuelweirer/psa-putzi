        {
          "step": 9,
          "actor": "Main Agent (PM)",
          "action": "Merge to develop"
        }
      ]
    },
    "architectureDecision": {
      "steps": [
        {
          "step": 1,
          "actor": "Any Developer",
          "action": "Create issue in .subagents/issues/"
        },
        {
          "step": 2,
          "actor": "Any Developer",
          "action": "Describe problem and options"
        },
        {
          "step": 3,
          "actor": "Senior Developer(s)",
          "action": "Discuss and recommend"
        },
        {
          "step": 4,
          "actor": "Senior Developer(s)",
          "action": "Document pros/cons"
        },
        {
          "step": 5,
          "actor": "Main Agent (PM)",
          "action": "Make final decision"
        },
        {
          "step": 6,
          "actor": "Main Agent (PM)",
          "action": "Document in ADR"
        },
        {
          "step": 7,
          "actor": "Main Agent (PM)",
          "action": "Update relevant documentation"
        }
      ]
    },
    "emergencyHotfix": {
      "steps": [
        {
          "step": 1,
          "actor": "Any Developer",
          "action": "Create critical issue (ðŸ”´)"
        },
        {
          "step": 2,
          "actor": "Any Developer",
          "action": "Notify all agents"
        },
        {
          "step": 3,
          "actor": "Senior Developer (owner)",
          "action": "Assess impact (< 30 min)",
          "sla": "< 30 minutes"
        },
        {
          "step": 4,
          "actor": "Senior Developer (owner)",
          "action": "Create hotfix branch"
        },
        {
          "step": 5,
          "actor": "Senior Developer (owner)",
          "action": "Implement fix"
        },
        {
          "step": 6,
          "actor": "Senior Developer (owner)",
          "action": "Get peer review"
        },
        {
          "step": 7,
          "actor": "Main Agent (PM)",
          "action": "Approve hotfix (< 1 hour)",
          "sla": "< 1 hour"
        },
        {
          "step": 8,
          "actor": "Main Agent (PM)",
          "action": "Deploy to production"
        },
        {
          "step": 9,
          "actor": "Main Agent (PM)",
          "action": "Schedule post-mortem"
        }
      ]
    }

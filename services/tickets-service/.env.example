# Server Configuration
NODE_ENV=development
PORT=3030

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=psa_platform
DATABASE_USER=psa_app
DATABASE_PASSWORD=your_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://psa_app:password@localhost:5672

# JWT (for validation - Gateway forwards user context)
JWT_SECRET=your-jwt-secret-min-32-chars

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# SMTP Configuration (for email notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@psa-platform.local
SMTP_SECURE=false

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Service Configuration
NODE_ENV=development
PORT=3010
SERVICE_NAME=psa-auth-service

# Database - PostgreSQL
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=psa_platform
POSTGRES_USER=psa_app
POSTGRES_PASSWORD=your_postgres_password

# Redis (for sessions and rate limiting)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_min_32_chars
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# MFA
MFA_ISSUER=PSA-Platform
MFA_WINDOW=1

# Email (for password reset - optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@psa-platform.local
SMTP_PASSWORD=smtp_password
SMTP_FROM=noreply@psa-platform.local

# Logging
LOG_LEVEL=info

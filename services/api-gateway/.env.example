# Server Configuration
NODE_ENV=development
PORT=3000
SERVICE_NAME=psa-api-gateway

# Redis (Rate Limiting & Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (must match auth service)
JWT_SECRET=your-secret-key-here-min-32-chars

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
CRM_SERVICE_URL=http://localhost:3002
TICKETS_SERVICE_URL=http://localhost:3003
BILLING_SERVICE_URL=http://localhost:3004
PROJECTS_SERVICE_URL=http://localhost:3005
ASSETS_SERVICE_URL=http://localhost:3006
REPORTS_SERVICE_URL=http://localhost:3007

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://10.255.20.15:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_ENDPOINTS=10

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=/tmp/api-gateway.log
